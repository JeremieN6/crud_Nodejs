<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id_client %>" method="POST">
          <div class="form-group">
            <input type="text" name="nom" value="<%= data.nom %>" placeholder="Nom" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="prenom" value="<%= data.prenom %>" placeholder="Prenom" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="adresse" value="<%= data.adresse %>" placeholder="Adresse" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            Enregistrer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
