<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id_commande %>" method="POST">
          <div class="form-group">
            <input type="text" name="date_commande" value="<%= data.date_commande %>" placeholder="Date Commande" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="numero" value="<%= data.numero %>" placeholder="Numero" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="id_client" value="<%= data.id_client %>" placeholder="Id client" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            Enregistrer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
