<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Nom</td>
            <td>Prenom</td>
            <td>Adresse</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].id_client %></td>
                <td><%= data[i].nom %></td>
                <td><%= data[i].prenom %></td>
                <td><%= data[i].adresse %></td>
                <td>
                  <a href="/update/<%= data[i].id_client %>" class="btn btn-info">Modifier</a>
                  <a href="/delete/<%= data[i].id_client %>" class="btn btn-danger">Supprimer</a>
                  <a href="/commandes/<%= data[i].id_client %>" class="btn btn-warning">Commande</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
   
    <div class="col-md-5">
      <div class="card-body">
        <h2>Nouveau Client</h2>
        <form action="/add/" method="POST">
          <div class="form-group">
            <input type="text" name="nom" placeholder="Nom" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="prenom" placeholder="Prenom" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="adresse" placeholder="Adresse" class="form-control">
          </div>
          <div class="form-group">
              <input type="text" name="date_naissance" placeholder="AAAA-MM-JJ" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleSelect1"></label>
                <select name ="civilite" class="form-control" id="exampleSelect1">
                  <option>M</option>
                  <option>F</option>
                </select>
              </div>
              <div class="form-group">
                  <input type="text" name="id_ville" placeholder="Id Ville" class="form-control">
                </div>

          <button type="submit" class="btn btn-primary">
            Enregistrer nouveau Client
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
